<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hexagon.MainPage">

    <ScrollView>
        <Grid>
            <VerticalStackLayout
                VerticalOptions="Start"
                HorizontalOptions="Center">
                <HorizontalStackLayout
                    HorizontalOptions="Center">
                    <Label
                        x:Name="StatusTitle"
                        Text="Aktualizováno"
                        HorizontalTextAlignment="Center"
                        FontFamily="SpaceGrotesk"/>
                </HorizontalStackLayout>
                <Label
                    x:Name="StatusDescription"
                    Text="před 3 minutami"
                    FontFamily="SpaceGrotesk"/>
                <Button
                    Text="Odhlasit"
                    FontFamily="SpaceGrotesk"
                    FontSize="24"
                    TextColor="White"
                    Clicked="Button_Clicked"/>
                <Button
                    Text="Refresh"
                    FontFamily="SpaceGrotesk"
                    FontSize="24"
                    TextColor="White"
                    Clicked="Button_Clicked_1"/>
            </VerticalStackLayout>

            <VerticalStackLayout
                x:Name="NetworkStatusBar"
                VerticalOptions="{OnIdiom Phone=Start, Default=End}"
                HorizontalOptions="Fill"
                BackgroundColor="{OnIdiom Phone={AppThemeBinding Light={StaticResource GradientStart}, Dark={StaticResource GradientStartDark}}, 
                Default={AppThemeBinding Light={StaticResource GradientEnd}, Dark={StaticResource GradientEndDark}}}">

                <ScrollView
                    Orientation="Horizontal"
                    HorizontalScrollBarVisibility="{OnIdiom Phone=Always, Default=Default}"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    HeightRequest="32">
                    <HorizontalStackLayout
                        VerticalOptions="Fill"
                        HorizontalOptions="Fill">

                        <ActivityIndicator
                            x:Name="NetworkActivityIndicator"
                            IsRunning="True"
                            Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                            WidthRequest="15"
                            HeightRequest="15"
                            Margin="10"/>
                        <Image
                            x:Name="NetworkBadImage"
                            Source="{AppThemeBinding Light=baddark.png, Dark=bad.png}" 
                            WidthRequest="20"
                            HeightRequest="20"
                            Margin="5"/>
                        <Image
                            x:Name="NetworkGoodImage"
                            Source="{AppThemeBinding Light=gooddark.png, Dark=good.png}" 
                            WidthRequest="20"
                            HeightRequest="20"
                            Margin="5"/>
                        <Label
                            x:Name="NetworkStatusLabel"
                            Text="Aktualizováno"
                            FontFamily="SpaceGrotesk"
                            VerticalTextAlignment="Center"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill"
                            LineBreakMode="CharacterWrap"
                            FontSize="18"
                            TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                            Margin="5"/>
                    </HorizontalStackLayout>
                </ScrollView>
            </VerticalStackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
