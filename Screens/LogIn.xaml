<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hexagon.Screens.LogIn"
             Title="LogIn">

    <Grid>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label
                Text="Přihlášení"
                FontFamily="SpaceGrotesk"
                FontAttributes="Bold"
                FontSize="64"/>
            <Entry
                x:Name="SchoolEntry"
                HorizontalTextAlignment="Center"
                Text=""
                Placeholder="URL Bakalářů Školy"
                Focused="SchoolEntry_Focused"
                Unfocused="SchoolEntry_Unfocused"
                />
        </VerticalStackLayout>
    </Grid>
</ContentPage>