<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hexagon.Screens.LogIn"
             Title="LogIn">

    <Grid>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label
                Text="Přihlášení"
                Margin="5"
                FontFamily="SpaceGrotesk"
                FontAttributes="Bold"
                FontSize="64"/>
            <Entry
                x:Name="SchoolEntry"
                Margin="5"
                HorizontalTextAlignment="Center"
                Text=""
                FontFamily="SpaceGrotesk"
                Placeholder="URL Bakalářů Školy"
                Focused="SchoolEntry_Focused"
                Unfocused="SchoolEntry_Unfocused"/>
            <Entry
                x:Name="UsernameEntry"
                Margin="5"
                HorizontalTextAlignment="Center"
                Text=""
                FontFamily="SpaceGrotesk"
                Placeholder="Uživatelské Jméno"/>
            <Entry
                x:Name="PasswordEntry"
                Margin="5"
                HorizontalTextAlignment="Center"
                Text=""
                FontFamily="SpaceGrotesk"
                Placeholder="Heslo"
                IsPassword="True"/>
            <Button
                x:Name="LogInSubmit"
                Margin="5"
                Text="Přihlásit"
                FontFamily="SpaceGrotesk"
                Clicked="LogInSubmit_Clicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>