<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hexagon.User"
             BackgroundColor="{OnIdiom Phone={AppThemeBinding Light=WhiteSmoke, Dark=OffBlack}, Default={AppThemeBinding Light=White, Dark=OffBlack}}">
    <Grid>
        <Border
            StrokeThickness="0"
            BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
            VerticalOptions="Center"
            HorizontalOptions="{OnIdiom Phone=Fill, Default=Center}"
            Padding="5,5">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow
                    Radius="30"
                    Opacity="0.2"
                    Offset="9,9"/>
            </Border.Shadow>

            <VerticalStackLayout>
                <Label
                    x:Name="UserName"
                    Text="UserName"
                    FontFamily="SpaceGrotesk"
                    FontAttributes="Bold"
                    LineBreakMode="WordWrap"
                    FontSize="48"
                    HorizontalTextAlignment="Center"
                    Padding="5"/>
                <Label
                    x:Name="SchoolURL"
                    Text="SchoolURL"
                    FontFamily="SpaceGrotesk"
                    FontAttributes="Bold"
                    LineBreakMode="WordWrap"
                    FontSize="24"
                    HorizontalTextAlignment="Center"
                    Padding="5"/>
                <Button
                    Text="Odhlásit"
                    FontFamily="SpaceGrotesk"
                    FontSize="24"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked"
                    Margin="5"/>
            </VerticalStackLayout>
        </Border>
        <VerticalStackLayout
            x:Name="NetworkStatusBar"
            VerticalOptions="{OnIdiom Phone=Start, Default=End}"
            HorizontalOptions="Fill"
            BackgroundColor="{OnIdiom Phone={AppThemeBinding Light={StaticResource GradientStart}, Dark={StaticResource GradientStartDark}}, 
            Default={AppThemeBinding Light={StaticResource GradientEnd}, Dark={StaticResource GradientEndDark}}}">

            <HorizontalStackLayout
                VerticalOptions="Fill"
                HorizontalOptions="Fill">   

                <ActivityIndicator
                    x:Name="NetworkActivityIndicator"
                    IsRunning="True"
                    Color="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                    WidthRequest="15"
                    HeightRequest="15"
                    IsVisible="False"
                    Margin="10"/>
                <Image
                    x:Name="NetworkBadImage"
                    Source="{AppThemeBinding Light=baddark.png, Dark=bad.png}" 
                    WidthRequest="20"
                    HeightRequest="20"
                    IsVisible="False"
                    Margin="5"/>
                <Image
                    x:Name="NetworkGoodImage"
                    Source="{AppThemeBinding Light=gooddark.png, Dark=good.png}" 
                    WidthRequest="20"
                    HeightRequest="20"
                    IsVisible="False"
                    Margin="5"/>
                <Label
                    x:Name="NetworkStatusLabel"
                    Text="Aktualizováno"
                    FontFamily="SpaceGrotesk"
                    VerticalTextAlignment="Center"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    LineBreakMode="CharacterWrap" 
                    FontSize="18"
                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                    Margin="5"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        
        <BoxView
            HeightRequest="1"
            VerticalOptions="End"
            BackgroundColor="{AppThemeBinding Light=LightGray, Dark=Black}"
            IsVisible="{OnIdiom Phone=True, Default=False}">
            <BoxView.Shadow>
                <Shadow
                    Radius="30"/>
            </BoxView.Shadow>
        </BoxView>
    </Grid>
</ContentPage>